
# Scripts
set $multimonitor   ~/.config/sway/scripts/multimonitor.py
set $launcher       ~/.config/sway/scripts/launcher.py
set $killall        ~/.config/sway/scripts/killall.py
set $startup        ~/.config/sway/scripts/startup.sh
set $swaybar        ~/.config/sway/scripts/swaybar.sh

exec $startup

# Wallpaper
set $wallpaper /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png
output * bg $wallpaper fill

# Output settings
# List outputs: swaymsg -t get_outputs
# DP-2:         Dell
# HDMI-A-1:     Asus
# DP-3:         4k Idea Display
output DP-2     resolution 1920x1080 position 0,0
output HDMI-A-1 resolution 1920x1080 position 0,1080
output DP-3     resolution 3840x2160 position 1920,720 scale 1.5

# Pin workspaces to outputs
workspace 1  output HDMI-A-1
workspace 2  output HDMI-A-1
workspace 3  output HDMI-A-1
workspace 4  output DP-3
workspace 9  output DP-2
workspace 10 output DP-2

# Input settings.
# List inputs: swaymsg -t get_inputs
# Disable caps lock on all keyboard type inputs.
input "type:keyboard" {
    xkb_options caps:none
}

# Idle configuration.
# Idle after 5 hours (or manual lock keybinding is pressed)
exec swayidle -w timeout 18000 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"'

###############
# Keybindings #
###############

# Windows key & Alt key
set $mod Mod4
set $alt Mod1

# Home row direction keys, like vim
set $left   h
set $down   j
set $up     k
set $right  l

# Keys for multimonitor commands
set $next i
set $prev u
set $new  g

# Kill focused window
bindsym $mod+c kill

# Reload the configuration file
bindsym $mod+Ctrl+r reload

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Ctrl+q exit

# Move your focus around
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right
bindsym $mod+Left   focus left
bindsym $mod+Down   focus down
bindsym $mod+Up     focus up
bindsym $mod+Right  focus right

# Move the focused window
bindsym $mod+Shift+$left    move left
bindsym $mod+Shift+$down    move down
bindsym $mod+Shift+$up      move up
bindsym $mod+Shift+$right   move right
bindsym $mod+Shift+Left     move left
bindsym $mod+Shift+Down     move down
bindsym $mod+Shift+Up       move up
bindsym $mod+Shift+Right    move right

# Resize the focused window
set $resize_px 10px
bindsym $mod+Alt+$left      resize grow left    $resize_px
bindsym $mod+Alt+$down      resize grow down    $resize_px
bindsym $mod+Alt+$up        resize grow up      $resize_px
bindsym $mod+Alt+$right     resize grow right   $resize_px
bindsym $mod+Alt+Left       resize grow left    $resize_px
bindsym $mod+Alt+Down       resize grow down    $resize_px
bindsym $mod+Alt+Up         resize grow up      $resize_px
bindsym $mod+Alt+Right      resize grow right   $resize_px

# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move focused window to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Move focus between outputs
bindsym $mod+$next              exec $multimonitor focus_next_output
bindsym $mod+$prev              exec $multimonitor focus_prev_output

# Move focus between workspaces on the current output
bindsym $mod+Tab                exec $multimonitor focus_next_workspace
bindsym $mod+Shift+Tab          exec $multimonitor focus_prev_workspace

# Move container between outputs
bindsym $mod+Shift+$next        exec $multimonitor move_container_to_next_output
bindsym $mod+Shift+$prev        exec $multimonitor move_container_to_prev_output

# Move workspace between outputs
bindsym $mod+Shift+Ctrl+$next   exec $multimonitor move_workspace_to_next_output
bindsym $mod+Shift+Ctrl+$prev   exec $multimonitor move_workspace_to_prev_output

# Cycle workspaces between outputs
bindsym $mod+Shift+$alt+$next   exec $multimonitor cycle_outputs_next
bindsym $mod+Shift+$alt+$prev   exec $multimonitor cycle_outputs_next

# Open a new workspace
bindsym $mod+$new               exec $multimonitor focus_new_workspace

# Move focused window to a new workspace
bindsym $mod+Shift+$new         exec $multimonitor move_container_to_new_workspace

# Split horizontally or vertically
bindsym $mod+b splith
bindsym $mod+v splitv

# Start a terminal
bindsym $mod+Return exec $term

# Run programs
set $term           alacritty
set $menu           "swaymsg exec 'wofi --show drun --allow-images --no-actions --width 400'"
set $lock           "bash -c 'sleep 0.2; killall -USR1 swayidle'"
set $browser        firefox
set $browser_alt    google-chrome --new-window
set $filemgr        thunar
set $mail           google-chrome --profile-directory=Default --app-id=fmgjjmmmlfnkbppncabfkddbjimcfncm
set $calendar       google-chrome --profile-directory=Default --app-id=kjbdgfilnfhdoflbpgamdcdgpehopbep
set $ytm            google-chrome --profile-directory=Default --app-id=cinhimbnkkaeohfgghhklpknlkffjgod
set $steam          steam
set $discord        discord
set $todoist        todoist
set $shutdown       "bash -c 'shutdown now'"
set $reboot         "bash -c 'reboot'"

mode "run" {
    bindsym $mod+o  exec $menu;         mode "default"
    bindsym o       exec $menu;         mode "default"
    bindsym l       exec $lock;         mode "default"
    bindsym b       exec $browser;      mode "default"
    bindsym $alt+b  exec $browser_alt;  mode "default"
    bindsym f       exec $filemgr;      mode "default"
    bindsym s       exec $steam;        mode "default"
    bindsym d       exec $discord;      mode "default"
    bindsym t       exec $todoist;      mode "default"
    bindsym m       exec $mail;         mode "default"
    bindsym c       exec $calendar;     mode "default"
    bindsym y       exec $ytm;          mode "default"
    bindsym Shift+w exec $launcher;     mode "default"
    bindsym Shift+c exec $killall;      mode "default"
    bindsym Shift+r exec $reboot;       mode "default"
    bindsym Shift+s exec $shutdown;     mode "default"

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+o mode "run"

# Audio controls
bindsym XF86AudioRaiseVolume   exec pamixer --increase 5
bindsym XF86AudioLowerVolume   exec pamixer --decrease 5
bindsym XF86AudioMute          exec pamixer --toggle-mute
bindsym XF86AudioMicMute       exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Mouse settings
focus_follows_mouse no
mouse_warping none

### Status Bar

bar {
    position bottom
    binding_mode_indicator yes
    font pango:Iosevka 12
    pango_markup enabled
    tray_output none
    status_command $swaybar
    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

### Gaps

gaps inner 10
gaps outer 0
smart_gaps on
default_border pixel 2

include /etc/sway/config.d/*

